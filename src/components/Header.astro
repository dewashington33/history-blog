---
type Props = {
  title: string;
};
const { title } = Astro.props;
---
<header
    class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto"
>
    <a href="/" class="flex gap-x-4 items-center">
        <img
            src="/images/history.svg"
            width={60}
            height={60}
            class="rounded-2xl aspect-thumnail object-cover"
        />
        <p class="uppercase text-2xl text-zinc-900">{title}</p>
    </a>
    <ul class="flex gap-x-8">
        <li><a href="/"></a>Home</li>
        <li><a href="/about">About</a></li>
        <li><a href="/blog"></a>Blog</li>
    </ul>   
</header>
